<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<!-- 抽象bean：bean的abstract 属性为true的bean，这样bean不能被IOC容器实例化，只能用来被继承配置
		若某一个bean的 class属性没有指定，则该bean必须是一个抽象bean -->
	<bean id="address" p:city="Shanghai" p:street="Lujiazui" abstract="true"></bean>
	
	<!-- bean配置的继承：使用bean的 parent属性 指定继承那个bean的配置 -->
	<bean id="address2" class="com.atguigu.spring.beansautowire.Address" p:street="Fanrong" parent="address"></bean>
	
	<bean id="address3" class="com.atguigu.spring.beansautowire.Address" p:street="YiTian" parent="address2"></bean>
	
	
	<bean id="car" class="com.atguigu.spring.beansautowire.Car" p:brand="Audi" p:price="300000"></bean>
	<!-- 要求再配置Person时，必须有一个关联的Car！ 换句话说person这个bean依赖于Car这个bean -->
	<bean id="person" class="com.atguigu.spring.beansautowire.Person" p:name="Tom" p:address-ref="address2" depends-on="car"></bean>
</beans>
